<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
            android:id="@+id/userAvatar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="20.4K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postNumber" android:textSize="20sp" app:layout_constraintStart_toEndOf="@+id/userAvatar"
            app:layout_constraintEnd_toStartOf="@+id/fansNumber"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/fansNumber"/>
    <TextView
            android:text="112M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fansNumber" android:textSize="20sp" app:layout_constraintStart_toEndOf="@+id/postNumber"
            app:layout_constraintEnd_toStartOf="@+id/followNumber"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="131"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followNumber" android:textSize="20sp" app:layout_constraintStart_toEndOf="@+id/fansNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="@+id/fansNumber"/>
    <TextView
            android:text="粉絲"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fansNumberTitle"
            android:textColor="@color/lightText"
            android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/fansNumber"
            app:layout_constraintStart_toStartOf="@+id/fansNumber" app:layout_constraintEnd_toEndOf="@+id/fansNumber"/>
    <TextView
            android:text="追蹤中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/followNumberTitle"
            android:textColor="@color/lightText"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/followNumber"
            app:layout_constraintStart_toStartOf="@+id/followNumber"
            app:layout_constraintEnd_toEndOf="@+id/followNumber"/>
    <TextView
            android:text="貼文"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postNumberTitle"
            android:textColor="@color/lightText" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/postNumber"
            app:layout_constraintStart_toStartOf="@+id/postNumber" app:layout_constraintEnd_toEndOf="@+id/postNumber"/>
    <TextView
            android:text="National Geographic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/userAvatar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>