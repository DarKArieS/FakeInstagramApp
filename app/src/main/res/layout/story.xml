<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="80dp"
                                                   android:layout_height="85dp">

    <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/ic_add_circle_outline_black_24dp"
            android:id="@+id/storyIcon"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" app:srcCompat="@drawable/add_icon"
            android:id="@+id/addIcon"
            app:layout_constraintEnd_toEndOf="@+id/storyIcon"
            app:layout_constraintBottom_toBottomOf="@+id/storyIcon" android:visibility="invisible"/>
    <TextView
            android:text="你的限時動態"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userName" android:textSize="12sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/storyIcon" android:layout_marginTop="1dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:ellipsize="end"   android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp" android:maxLines="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>